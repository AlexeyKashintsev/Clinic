Select * 
From buh_companies t1
 Where (t1.buh_companies_id = :company_id or :company_id is null)
 and ((:company_find is null and :company_name is null)
  or t1.company_name ilike '%' || :company_find || '%'
  or t1.company_short_name ilike '%' || :company_find || '%'
  or t1.reg_address ilike '%' || :company_find || '%')